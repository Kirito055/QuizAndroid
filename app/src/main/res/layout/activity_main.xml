<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">




    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_margin="4dp" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/questionConter"
                      android:text="1/10"
                      android:textSize="14sp"
                      android:layout_margin="4dp"
                      android:textColor="#000"
                      android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/grade" android:textSize="22dp" android:layout_marginLeft="120dp"/>
    </LinearLayout>
    <LinearLayout android:layout_margin="4dp"
            android:orientation="vertical" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18sp" android:text="Time_Left" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/timer"
                  android:text="12" android:layout_margin="2dp" android:textStyle="bold" android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout android:layout_margin="4dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:text="Who is it?"
                android:id="@+id/number"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">  <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/question"
            android:layout_width="360dp"
            android:layout_margin="40dp"

            android:layout_height="178dp"
            android:src="@drawable/aisha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.241" /></LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/Aans"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Option 1"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"
        />
        <Button
                android:id="@+id/Bans"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Option 2"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"/>
        <Button android:id="@+id/Cans"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="OPTION 3"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"/>
        <Button android:id="@+id/Dans"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Option 4"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"/>
    </LinearLayout>


</LinearLayout>